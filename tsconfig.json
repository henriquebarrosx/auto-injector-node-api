{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@decorators/*": [
        "src/infra/decorators/*"
      ],
      "@entities/*": [
        "src/domain/entities/*"
      ],
      "@adapters/*": [
        "src/infra/adapters/*"
      ],
      "@configs/*": [
        "src/infra/config/*"
      ],
      "@repositories/*": [
        "src/domain/repositories/*"
      ],
      "@HttpServer": [
        "src/infra/adapters/http-server/types"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}